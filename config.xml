<?xml version='1.0' encoding='utf-8'?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id = "com.phonegap.helloworld"
        version = "2.0.0" >
  <gap:splash src="images/splash.png" gap:platform="ios" width="1024" height="768" />
  <gap:splash src="images/splash.png" gap:platform="android" />
  <gap:platform name="ios" />
  <gap:platform name="android" />

  <feature name="http://api.phonegap.com/1.0/camera"/>
  <feature name="http://api.phonegap.com/1.0/contacts"/>
  <feature name="http://api.phonegap.com/1.0/file"/>
  <feature name="http://api.phonegap.com/1.0/geolocation"/>
  <feature name="http://api.phonegap.com/1.0/media"/>
  <feature name="http://api.phonegap.com/1.0/network"/>
  <feature name="http://api.phonegap.com/1.0/notification"/>

  <preference name="android-minSdkVersion" value="14" />
  <preference name="orientation" value="landscape" />
  <preference name="phonegap-version" value="3.0.0" />
  <preference name="splash-screen-duration" value="10000"/>
  <preference name="AutoHideSplashScreen" value="true" />
  <preference name="SplashScreen" value="images/splash.png" />
  <preference name="SplashScreenDelay" value="10000" />
</widget>